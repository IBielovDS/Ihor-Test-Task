{%- if article != blank -%}
  <div class="article-card">
    <div>
      {%- if article.image != blank -%}
        <a href="{{- article.url -}}">
          {%- render 'responsive-image-dynamic_v2',
            image: article.image,
            alt_text: article.image.alt,
            class: 'rounded-8 w-full h-[200px] lg:h-[250px] object-cover mb-24'
          -%}
        </a>
      {%- endif -%}

      <div class="label-text text-black-200 mb-8">{{- article.published_at | date: '%B %d, %Y' -}}</div>

      {%- if article.tags.size > 0 -%}
        <div class="body-3 font-medium uppercase text-orange-100 mb-8">
          {%- for tag in article.tags limit: 3 -%}
            {{- tag -}}
            {% unless forloop.last %}, {% endunless %}
          {%- endfor -%}
        </div>
      {%- endif -%}

      <h5 class="uppercase text-black-200 mb-16">
        <a href="{{- article.url -}}">{{- article.title -}}</a>
      </h5>
      <div class="body-3 text-grey-600">{{- article.excerpt_or_content | strip_html | truncatewords: 20 -}}</div>
    </div>
    <a
      href="{{- article.url -}}"
      class="button-text-2 uppercase flex items-center mt-24"
    >
      {{- 'blogs.article.read_more' | t -}}
      {%- render 'icon_v2', icon: 'navigation-arrow-left', class: 'ml-8 rotate-180 [&_path]:fill-black-200' -%}
    </a>
  </div>
{%- endif -%}

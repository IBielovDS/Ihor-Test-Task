{%- liquid
  assign template_name = template.name
  assign image = section.settings.image

  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign padding_top_mobile = section.settings.padding_top_mobile
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign margin_top_mobile = section.settings.margin_top_mobile
  assign margin_bottom_mobile = section.settings.margin_bottom_mobile
-%}

<style>
  :root #shopify-section-{{section.id}} {
    --padding-top: {{- padding_top -}}px;
    --padding-bottom: {{- padding_bottom -}}px;
    --padding-top-mobile: {{- padding_top_mobile -}}px;
    --padding-bottom-mobile: {{- padding_bottom_mobile -}}px;
    --margin-top: {{- margin_top -}}px;
    --margin-bottom: {{- margin_bottom -}}px;
    --margin-top-mobile: {{- margin_top_mobile -}}px;
    --margin-bottom-mobile: {{- margin_bottom_mobile -}}px;
  }
</style>

<div
  class="account__inner grid {% if image != blank %}lg:grid-cols-2{% else %}lg:grid-cols-1{% endif %}"
>
  {%- if image != blank -%}
    <div class="account__image w-full relative pb-[100%] hidden lg:block">
      {% render 'responsive-image-dynamic_v2',
        image: image,
        class: 'absolute top-0 left-0 w-full h-full object-cover'
      %}
    </div>
  {%- endif -%}

  <div class="account__form flex justify-center items-center px-16 lg:px-0">
    {% render 'account-form', template_name: template_name %}
  </div>
</div>

{% schema %}
{
  "name": "Account",
  "class": "account global-spacing ",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Inner Spaces"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "(Desktop) Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "(Desktop) Padding bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "(Mobile) Padding top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "(Mobile) Padding bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Outer Spaces"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "(Desktop) Margin top",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "(Desktop) Margin bottom",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "(Mobile) Margin top",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "(Mobile) Margin bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Account"
    }
  ]
}
{% endschema %}

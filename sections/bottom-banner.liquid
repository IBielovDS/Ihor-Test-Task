{%- liquid
  assign image_desktop = section.settings.image_desktop
  assign image_mobile = section.settings.image_mobile
  assign subtitle = section.settings.subtitle
  assign title = section.settings.title
  assign text = section.settings.text
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign padding_top_mobile = section.settings.padding_top_mobile
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign margin_top_mobile = section.settings.margin_top_mobile
  assign margin_bottom_mobile = section.settings.margin_bottom_mobile
-%}

{%- if image_desktop != blank -%}
  <style>
    :root #shopify-section-{{section.id}} {
      --padding-top: {{- padding_top -}}px;
      --padding-bottom: {{- padding_bottom -}}px;
      --padding-top-mobile: {{- padding_top_mobile -}}px;
      --padding-bottom-mobile: {{- padding_bottom_mobile -}}px;
      --margin-top: {{- margin_top -}}px;
      --margin-bottom: {{- margin_bottom -}}px;
      --margin-top-mobile: {{- margin_top_mobile -}}px;
      --margin-bottom-mobile: {{- margin_bottom_mobile -}}px;
    }
  </style>

  <div class="relative">
    {%- render 'responsive-image-dynamic_v2', image: image_desktop, image_mobile: image_mobile, class: 'w-full' -%}
    <div class="absolute left-0 top-0 w-full h-full z-10 global-inner-spacing">
      <div class="container">
        {%- if subtitle != blank -%}
          <div class="text-white text-center lg:text-left subtitle-text font-bold mb-24 lg:mb-16">{{- subtitle -}}</div>
        {%- endif -%}

        {%- if title != blank -%}
          <h2 class="text-white mb-24 lg:mb-32 text-center lg:text-left lg:max-w-[560px]">{{- title -}}</h2>
        {%- endif -%}

        {%- if text != blank -%}
          <div class="text-white-0.7 body-2 mb-40 lg:mb-48 text-center lg:text-left">{{- text -}}</div>
        {%- endif -%}

        {%- if button_text != blank and button_link != blank -%}
          <a
            href="{{- button_link -}}"
            class="button button--primary button--centered lg:ml-0"
          >
            {{- button_text -}}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Bottom Banner",
  "class": "global-outer-spacing",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "MUSIC SOUNDS BETTER WHEN IT'S WICKED"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Find your best cushions and we guarantee you quality!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Shopping"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Outer Spaces"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "(Desktop) Margin top",
      "default": 160
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "(Desktop) Margin bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "(Mobile) Margin top",
      "default": 120
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "(Mobile) Margin bottom",
      "default": 0
    },
    {
      "type": "header",
      "content": "Inner Spaces"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "(Desktop) Padding top",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "(Desktop) Padding bottom",
      "default": 160
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "(Mobile) Padding top",
      "default": 120
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "(Mobile) Padding bottom",
      "default": 120
    }
  ],
  "presets": [
    {
      "name": "Bottom Banner"
    }
  ]
}
{% endschema %}

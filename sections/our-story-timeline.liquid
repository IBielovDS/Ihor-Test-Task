{%- liquid
  assign margin_top = section.settings.margin_top
  assign margin_bottom = section.settings.margin_bottom
  assign margin_top_mobile = section.settings.margin_top_mobile
  assign margin_bottom_mobile = section.settings.margin_bottom_mobile
  assign padding_top = section.settings.padding_top
  assign padding_bottom = section.settings.padding_bottom
  assign padding_top_mobile = section.settings.padding_top_mobile
  assign padding_bottom_mobile = section.settings.padding_bottom_mobile
  assign subtitle = section.settings.subtitle
  assign title = section.settings.title
-%}

{% if section.blocks.size > 0 %}
  <style>
    :root #shopify-section-{{section.id}} {
      --margin-top: {{- margin_top -}}px;
      --margin-bottom: {{- margin_bottom -}}px;
      --margin-top-mobile: {{- margin_top_mobile -}}px;
      --margin-bottom-mobile: {{- margin_bottom_mobile -}}px;
      --padding-top: {{- padding_top -}}px;
      --padding-bottom: {{- padding_bottom -}}px;
      --padding-top-mobile: {{- padding_top_mobile -}}px;
      --padding-bottom-mobile: {{- padding_bottom_mobile -}}px;
    }
  </style>

  <div class="bg-black-200 global-inner-spacing">
    <div class="container">
      <div class="grid gap-40 lg:grid-cols-2">
        <div>
          {%- if subtitle != blank -%}
            <div class="subtitle-text font-bold text-white mb-16">{{- subtitle -}}</div>
          {%- endif -%}

          {%- if title != blank -%}
            <h2 class="text-white">{{- title -}}</h2>
          {%- endif -%}
        </div>
        <div class="relative border-l-1 border-grey-600 pl-32 lg:pl-100 before:content-[''] before:absolute before:top-0 before:left-[-1px] before:w-1 before:h-10 before:bg-black-200">
          {%- for block in section.blocks -%}
            {%- if block.settings.title != blank -%}
              <div
                class="relative mb-56 last:mb-0 lg:mb-80 lg:last:mb-0"
                {{ block.shopify_attributes }}
              >
                <div class="absolute -left-[39px] lg:-left-[107px] top-10 z-10 w-14 h-14 bg-orange-100"></div>

                {%- if block.settings.year != blank -%}
                  <div class="w-fit body-2 text-white font-bold py-8 px-16 bg-black-300 rounded-8 mb-24">
                    {{- block.settings.year -}}
                  </div>
                {%- endif -%}

                <h5 class="text-white mb-16 lg:mb-24 uppercase">{{- block.settings.title -}}</h5>

                {%- if block.settings.description != blank -%}
                  <div class="text-grey-200 [&_p:mb-16] [&_p:last:mb-0]">{{- block.settings.description -}}</div>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Our Story Timeline",
  "class": "global-outer-spacing",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Our Story"
    },
    {
      "type": "text",
